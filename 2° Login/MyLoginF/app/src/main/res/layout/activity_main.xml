<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.marcio.myloginf.MainActivity"
    android:orientation="horizontal"
    android:background="@drawable/azul">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/logar"
        android:id="@+id/Blogin"
        android:layout_gravity="center_vertical"
        android:onClick="onButtonClick"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#010101"
        android:background="#00809d" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/Login"
        android:id="@+id/textView"
        android:textColor="#010101" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/TFusername"
        android:layout_weight="1"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="@string/Digite_o_Login"
        android:textColor="#010101"
        android:textColorHint="#ff0400"
        android:background="#007312" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/Senha"
        android:id="@+id/textView3"
        android:layout_below="@+id/TFusername"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#010101" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/TFpassword"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:inputType="textPassword"
        android:hint="@string/Digite_a_senha"
        android:textColor="#010101"
        android:textColorHint="#ff0400"
        android:background="#007312" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/Registrar"
        android:id="@+id/Bsignup"
        android:layout_below="@+id/Blogin"
        android:layout_centerHorizontal="true"
        android:onClick="onButtonClick"
        android:textColor="#ffffff"
        android:background="#8b0003" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/Sair"
        android:id="@+id/sairhere"
        android:layout_below="@+id/Bsignup"
        android:layout_centerHorizontal="true"
        android:background="#00809d"
        android:textColor="#010101" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="APP developed by Marcio Ariani"
        android:id="@+id/textView12"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000394" />

</RelativeLayout>

